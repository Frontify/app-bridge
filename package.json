{
    "name": "@frontify/app-bridge",
    "version": "1.2.0",
    "description": "Package to establish communication between Frontify and marketplace apps",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rimraf dist",
        "test": "jest",
        "start": "webpack --config webpack.config.dev.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint ./src",
        "build": "npm run clean && npm run build:ts",
        "build:ts": "webpack --config webpack.config.prod.js",
        "prepare": "husky install"
    },
    "author": "@frontify",
    "devDependencies": {
        "@babel/cli": "^7.14.5",
        "@babel/core": "^7.14.5",
        "@babel/preset-env": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@frontify/eslint-config-typescript": "^0.6.0",
        "@types/jest": "^26.0.23",
        "@types/react": "^17.0.13",
        "babel-loader": "^8.2.2",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "prettier": "^2.3.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "typescript": "^4.3.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.2"
    },
    "peerDependencies": {
        "react": "^17.0.2"
    },
    "engines": {
        "node": ">=16"
    }
}
