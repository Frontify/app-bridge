{
    "name": "@frontify/app-bridge",
    "version": "2.0.1",
    "description": "Package to establish communication between Frontify and marketplace apps",
    "main": "dist/index.umd.js",
    "files": [
        "dist"
    ],
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./react": {
            "import": "./dist/react/index.js",
            "require": "./dist/react/index.js"
        }
    },
    "scripts": {
        "clean": "rimraf dist",
        "test": "jest",
        "start": "webpack --config webpack.config.dev.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint ./src",
        "build": "npm run clean && npm run build:ts",
        "build:ts": "webpack --config webpack.config.prod.js",
        "prepare": "husky install"
    },
    "author": "Frontify Developers <developers@frontify.com>",
    "devDependencies": {
        "@babel/cli": "7.15.7",
        "@babel/core": "7.15.8",
        "@babel/preset-env": "7.15.8",
        "@babel/preset-typescript": "7.15.0",
        "@frontify/eslint-config-typescript": "0.11.0",
        "@types/jest": "27.0.2",
        "@types/react": "17.0.30",
        "babel-loader": "8.2.2",
        "husky": "7.0.2",
        "jest": "27.2.5",
        "prettier": "2.4.1",
        "rimraf": "3.0.2",
        "ts-jest": "27.0.6",
        "ts-loader": "9.2.6",
        "typescript": "4.4.4",
        "webpack": "5.58.2",
        "webpack-cli": "4.9.0"
    },
    "peerDependencies": {
        "react": "^17.0.2"
    },
    "engines": {
        "node": ">=16"
    }
}
